<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.flybean.study"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <com.flybean.study.view.RippleView
        android:id="@+id/ripple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android_custom:rv_type="doubleRipple" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world" />
    </com.flybean.study.view.RippleView>

    <com.flybean.study.view.CircleProgress
        android:id="@+id/circle_progress"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginBottom="78dp"
        android:layout_below="@id/ripple"
        
        android_custom:roundColor="#D1D1D1"
        android_custom:roundProgressColor="#0000ff"
        android_custom:roundWidth="2dip"
        android_custom:textColor="#9A32CD"
        android_custom:textIsDisplayable="true"
        android_custom:textSize="18sp" />

</RelativeLayout>